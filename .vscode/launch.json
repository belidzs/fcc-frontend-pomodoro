    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "firefox",
            "profile": "dev-edition-default",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}/src",
            "pathMappings": [
                {
                    "url": "http://localhost:3000/workspaces/calculator/src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        }
    ]
}